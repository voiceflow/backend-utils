{
  "name": "@voiceflow/backend-utils",
  "description": "Junk drawer of utility functions",
  "version": "0.0.0",
  "author": "Voiceflow",
  "bugs": {
    "url": "https://github.com/voiceflow/backend-utils/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@voiceflow/logger": "^1.4.2",
    "@voiceflow/verror": "^1.1.0",
    "bluebird": "^3.7.2",
    "chai": "^4.2.0",
    "express-validator": "^6.3.0",
    "http-status": "^1.4.2",
    "lodash": "^4.17.11",
    "luxon": "^1.21.3",
    "sinon": "^7.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@voiceflow/eslint-config": "^2.0.5",
    "@voiceflow/git-branch-check": "^1.1.3",
    "@voiceflow/prettier-config": "^1.0.5",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^2.1.0",
    "depcheck": "^1.3.1",
    "eslint": "^6.0.1",
    "express": "^4.17.1",
    "fixpack": "^4.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "prettier-eslint-cli": "^5.0.0",
    "supertest": "^4.0.2"
  },
  "files": [
    "lib/**",
    "config/**",
    "app/**",
    "*.js",
    "!scratch.*"
  ],
  "homepage": "https://github.com/voiceflow/backend-utils#readme",
  "keywords": [
    "utilities"
  ],
  "license": "ISC",
  "main": "index.js",
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voiceflow/backend-utils.git"
  },
  "scripts": {
    "commit": "cz",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "lint:report": "yarn lint --format json -o sonar/report.json",
    "prepare": "fixpack",
    "test": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.{unit,it}.js'",
    "test:dependencies": "depcheck",
    "test:integration": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.it.js'",
    "test:single": "mocha --opts ./config/tests/mocha.opts",
    "test:unit": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.unit.js'"
  }
}
