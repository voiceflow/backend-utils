    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.4"
  },
  "files": [
    "build/**"
  ],
  "homepage": "https://github.com/voiceflow/backend-utils#readme",
  "keywords": [
    "utilities"
  ],
  "license": "ISC",
  "main": "build/index.js",
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voiceflow/backend-utils.git"
  },
  "scripts": {
    "build": "yarn clean && ttsc --project ./tsconfig.build.json",
    "clean": "rimraf build",
    "commit": "cz",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "lint:report": "yarn lint --format json -o sonar/report.json",
    "prepare": "fixpack",
    "test:run": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.{unit,it}.js'",
    "test:dependencies": "depcheck",
    "test:integration": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.it.js'",
    "test:single": "mocha --opts ./config/tests/mocha.opts",
    "test:unit": "nyc mocha --opts ./config/tests/mocha.opts 'tests/**/*.unit.js'"
  },
  "types": "build/index.d.ts"
}
