{
  "name": "@voiceflow/backend-utils",
  "description": "Junk drawer of utility functions",
  "version": "0.0.0",
  "author": "Voiceflow",
  "bugs": {
    "url": "https://github.com/voiceflow/backend-utils/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@voiceflow/logger": "^1.1.10",
    "@voiceflow/verror": "^1.1.0",
    "bluebird": "^3.7.2",
    "chai": "^4.2.0",
    "express-validator": "^6.3.0",
    "http-status": "^1.4.2",
    "lodash": "^4.17.11",
    "luxon": "^1.21.3",
    "moment": "^2.24.0",
    "randomstring": "^1.1.5",
    "sinon": "^7.5.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.0.0",
    "@voiceflow/eslint-config": "^2.0.1",
    "@voiceflow/git-branch-check": "^1.0.2",
    "@voiceflow/prettier-config": "^1.0.4",
    "codacy-coverage": "^3.4.0",
    "commitizen": "^3.1.1",
    "commitlint": "^8.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.1",
    "express": "^4.17.1",
    "fixpack": "^2.3.1",
    "husky": "^2.6.0",
    "istanbul": "^0.4.5",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.17",
    "supertest": "^4.0.2"
  },
  "files": [
    "lib/**",
    "config/**",
    "app/**",
    "*.js",
    "!scratch.*"
  ],
  "homepage": "https://github.com/voiceflow/backend-utils#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "git-branch-check"
    }
  },
  "keywords": [
    "utilities"
  ],
  "license": "ISC",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "main": "index.js",
  "nyc": {
    "exclude": [
      "coverage/**",
      "tests/**",
      "scratch.js",
      "index.js",
      ".*.js",
      "commitlint.config.js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true
  },
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voiceflow/backend-utils.git"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "prepare": "fixpack",
    "test": "nyc mocha --opts ./config/tests/mocha.opts tests/**/*.{unit,it}.js",
    "test:unit": "nyc mocha --opts ./config/tests/mocha.opts \"tests/**/*.unit.js\"",
    "test:integration": "nyc mocha --opts ./config/tests/mocha.opts tests/**/*.it.js",
    "test:single": "mocha --opts ./config/tests/mocha.opts"
  }
}
